<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header">
      <h1 class="auth-title">Vialink</h1>
      <p class="auth-subtitle">링크에 가치를 더하다</p>
    </div>

    <h2 class="form-title">회원가입</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'auth-form' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email, '이메일' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-input', placeholder: 'your@email.com' %>
      </div>

      <div class="form-group">
        <%= f.label :password, '비밀번호' %>
        <% if @minimum_password_length %>
          <span class="field-hint">(<%= @minimum_password_length %>자 이상)</span>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-input', placeholder: '비밀번호를 입력하세요' %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, '비밀번호 확인' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-input', placeholder: '비밀번호를 다시 입력하세요' %>
      </div>

      <div class="form-actions">
        <%= f.submit "가입하기", class: 'btn-submit' %>
      </div>
    <% end %>

    <div class="auth-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
