<%= form_with model: @link, url: links_path, local: true, html: { class: 'link-form' } do |f| %>
  <% if @link.errors.any? %>
    <div class="error-box">
      <h3>오류:</h3>
      <ul>
        <% @link.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :original_url, "원본 URL" %>
    <%= f.text_field :original_url, placeholder: "https://example.com/article", class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= f.label :cta_text, "CTA 메시지" %>
    <%= f.text_field :cta_text, placeholder: "우리 제품을 확인해보세요!", class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= f.label :cta_link, "CTA 링크 URL" %>
    <%= f.text_field :cta_link, placeholder: "https://yoursite.com", class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= f.label :cta_button_text, "버튼 텍스트 (기본값: 자세히 보기)" %>
    <%= f.text_field :cta_button_text, placeholder: "자세히 보기", class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= f.label :cta_position, "CTA 위치" %>
    <%= f.select :cta_position, [["왼쪽", "left"], ["가운데", "center"], ["오른쪽", "right"]], { selected: "center" }, class: 'form-select' %>
  </div>

  <div class="form-group">
    <%= f.label :cta_color, "CTA 배경색" %>
    <%= f.color_field :cta_color, value: "#2563eb", class: 'form-color-input' %>
  </div>

  <div class="form-submit">
    <%= f.submit "링크 생성", class: 'btn-primary' %>
  </div>
<% end %>
