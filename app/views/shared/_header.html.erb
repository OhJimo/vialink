<header class="site-header">
  <div class="header-container">
    <div class="header-logo">
      <%= link_to root_path, class: 'logo-link' do %>
        <h1 class="logo-text">Vialink</h1>
      <% end %>
    </div>

    <nav class="header-nav">
      <% if user_signed_in? %>
        <%= link_to "대시보드", dashboard_path, class: 'nav-link' %>
        <%= button_to "로그아웃", destroy_user_session_path, method: :delete, class: 'nav-link', form: { style: 'display: inline;' } %>
      <% else %>
        <%= link_to "로그인", new_user_session_path, class: 'nav-link' %>
        <%= link_to "회원가입", new_user_registration_path, class: 'nav-btn-primary' %>
      <% end %>
    </nav>
  </div>
</header>
